<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        app:cardCornerRadius="16dp"
        app:elevation="1dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/LeftSideColor"
                android:layout_width="16dip"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/cardtextshape"/>

        <TextView
                android:id="@+id/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@+id/LeftSideColor"
                android:text="Title"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/DueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextTitle"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/LeftSideColor"
                android:text="02/10/2019" />

        <TextView
                android:id="@+id/PlaceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DueText"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/LeftSideColor"
                android:text="Place" />

        <TextView
                android:id="@+id/DescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PlaceText"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/LeftSideColor"
                android:text="TextView" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>