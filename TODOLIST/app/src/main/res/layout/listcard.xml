<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <EditText
                android:id="@+id/name_home_text"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="310dp"
                android:layout_marginRight="500dp"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="15"
                android:inputType="text"
                android:radius="100dp"
                android:shape="rectangle"
                android:singleLine="true"
                android:textStyle="bold" />

        <ImageButton
                android:id="@+id/notificationButton"
                app:srcCompat="@drawable/ic_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/name_home_text"
                android:layout_alignBottom="@+id/name_home_text"
                android:layout_marginLeft="283dp"
                android:layout_marginBottom="51dp"
                android:background="#00000000"
                android:onClick="goYellow" />

        <TextView
                android:id="@+id/hometoday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="255dp"
                android:text="Today"
                android:textColor="#9e9e9e"
                android:textSize="35sp" />

        <View
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_marginTop="310dp"
                android:layout_marginRight="305dp"
                android:background="@drawable/border"
                android:ems="15"
                android:radius="100dp" />
        //android:layout_editor_absoluteX="6dp"
        //android:layout_editor_absoluteY="6dp"

    </RelativeLayout>
</RelativeLayout>